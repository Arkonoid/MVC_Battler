@using MVC_Battler.Controllers
@model Character
@{
  CharacterController.Enemy enemy = ViewBag.Enemy;
  Character player = Model;

  if (enemy.EnemyName == null)
  {
    enemy.EnemyName = "Default Enemy";
  }
  
}

<h2 class="text-primary text-center">Battle</h2>

<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-6">
      <h3>@player.Name</h3>
      <h4 class="text-decoration-underline">Stats</h4>
      <p>Health: @player.HP</p>
      <p>Strength: @player.Strength</p>
    </div>
    <div class="col-6 text-end">
      <h3>Name: @enemy.EnemyName</h3>
      <h4 class="text-decoration-underline">Stats</h4>
      <p>Health: @enemy.EnemyHP</p>
      <p>Strength: @enemy.EnemyStrength</p>
    </div>
  </div>
  <a class="btn btn-primary" asp-controller="Battle" asp-action="BattleUpdate"
     asp-route-playerName="@player.Name"
     asp-route-enemyName="@enemy.EnemyName"
     asp-route-playerHP="@player.HP"
     asp-route-enemyHP="@enemy.EnemyHP"
     asp-route-playerStrength="@player.Strength"
     asp-route-enemyStrength="@enemy.EnemyStrength">
    Fight
  </a>
</div>