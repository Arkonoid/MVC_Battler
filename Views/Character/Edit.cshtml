@model Character

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Character</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger">The character needs a name</span>
        </div>
        <div class="mb-3">
            <label asp-for="HP"></label>
            <input asp-for="HP" class="form-control"/>
            <span asp-validation-for="HP" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Strength"></label>
            <input asp-for="Strength" class="form-control"/>
            <span asp-validation-for="Strength" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
        <a asp-controller="Character" asp-action="Index" class="btn btn-secondary" style="width: 150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

