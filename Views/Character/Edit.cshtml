@model Player

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Edit Character</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Character" asp-action="Create" class="btn btn-primary">
                Create New Character
            </a>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="HP"></label>
            <input asp-for="HP" class="form-control"/>
            <span asp-validation-for="HP" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Strength"></label>
            <input asp-for="Strength" class="form-control"/>
            <span asp-validation-for="Strength" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Toughness"></label>
            <input asp-for="Toughness" class="form-control"/>
            <span asp-validation-for="Toughness" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
        <a asp-controller="Character" asp-action="Index" class="btn btn-secondary" style="width: 150px">
            Back to List
        </a>
    </div>
</form>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">< Back</a>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}